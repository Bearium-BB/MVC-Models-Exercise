@model VideoGameRepository
@{
    SteamGame sg = new SteamGame(346110);
}

<div class="container ">
    <div class="row row-cols-auto">
        <div class="card shadow-sm rounded" style="width: 18rem;">
            <img src="@sg.Game.Screenshots[0].PathThumbnail" class="card-img-top" alt="..." >
            <div class="card-body">
                <h5 class="card-title">@sg.Game.Name</h5>
                <p class="card-text">Price @sg.Game.PriceOverview.Final.ToString().Insert(@sg.Game.PriceOverview.Final.ToString().Length-2,".") @sg.Game.PriceOverview.Currency </p>
                <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Game" asp-route-id="@sg.Game.SteamAppId">See more details</a>
            </div>
        </div>
  </div>
</div>

